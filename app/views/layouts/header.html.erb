
<nav class="navbar-inverse" id="header-nav">
	<div class="container-fluid">
		<div class="navbar-header">
			<div class="navbar-brand">MUTEX</div>
		</div>
	
		<% if current_user %>		
			<ul class="nav navbar-nav">
				<li><%= link_to "Dashboard", root_path %></li>
				<%if policy(:navbar).analytics_enabled?%>
					<li><%= link_to "Analytics", analytics_path %></li>
				<%end%>
				<%if policy(:navbar).admin?%>
					<li class="dropdown">
						<a class="dropdown-toggle" data-toggle="dropdown">Admin</a>
						<ul class="dropdown-menu">
						<li><%= link_to "Users", users_path %></li></li>
						<li><%= link_to "Configure Form Options", form_options_path %></li>
						</ul>
					</li>
				<%end%>
			</ul>
		<%end%>
		<ul class="nav navbar-right navbar-nav">
			<% if current_user %>
				<li><%= link_to "Log out", logout_path, method: "delete" %></li>
