<% if @daily_checklists.any? %>
	<h2>Checklists to complete today</h2>
	<ul>
	<% @daily_checklists.each do |dc| %>
		<li><%= dc.name %></li>
	<% end %>
	</ul>
<% end %>

<% if @weekly_checklists.any? %>
<h2>Checklists to complete this week</h2>
	<ul>
	<% @weekly_checklists.each do |dc| %>
		<li><%= dc.name %></li>
	<% end %>
	</ul>
<% end %>

<% if @monthly_checklists.any? %>
<h2>Checklists to complete this month</h2>

<% end %>

<h2>Checklists for <%=@user.first_name%> <%=@user.last_name%></h2>
	<table class="table table-striped">
		<th class="col-md-2">Name</th>
		<th>Description</th>
		<th class="col-md-1">Target Frequency</th>
		<th class="col-md-1"></th>
		<th class="col-md-1"></th>
		<% @checklists.each do |c| %>
			<tr>
				<td><%= c.name %></td>
				<td><%= c.description %></td>
				<td><%= c.frequency.capitalize %></td>
				<td><%= link_to "Edit", edit_checklist_path(c.id),
						:class => "btn btn-info"%></td>
				<td><%= link_to "Remove", checklist_path(c.id),
						:method => :delete,
						:class => "btn btn-danger",
						data: {:confirm => "Are you sure?"}%></td>
			</tr>
		<% end %>
	</table>
	<%= link_to "Create Checklist", "checklists/new",
		:class => "btn btn-primary"%>
