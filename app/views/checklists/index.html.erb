<h1>Checklists for <%=@user.first_name%> <%=@user.last_name%></h1>
<div>
	<table>
		<th>Name</th>
		<th>Description</th>
		<th></th>
		<th></th>
		<% @checklists.each do |c| %>
			<tr>
				<td><%= c.name %></td>
				<td><%= c.description %></td>
				<td><%= link_to "Edit", edit_checklist_path(c.id)%></td>
				<td><%= link_to "Remove", checklist_path(c.id),
						:method => :delete,
						data: {:confirm => "Are you sure?"}%></td>
			</tr>
		<% end %>
	</table>
	<%= link_to "Create Checklist", "checklists/new" %>
</div>